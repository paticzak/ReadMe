@model IEnumerable<ReadMe.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!Model.Any())
{
    <p>You hasn't read a book yet.</p>
}
else
{
    <h2>Książki przeczytane:</h2>
    <div>
        @Html.ActionLink("New book", "New", "Books", null, new { @class = "btn btn-primary btn-large" })
    </div>
    <br />

    <table id="books" class="table table-bordered table-hover">
        <thead>
            <tr>
                @*<th>Id</th>*@
                <th>Title</th>
                <th>Genre</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    @*<td>@book.Id</td>*@
                    <td>@Html.ActionLink(book.Name, "Edit", "Books", new { id = book.Id }, null)</td>
                    <td>@book.Genre.Name</td>
                    <td>
                        <button data-book-id="@book.Id" class="btn-link js-delete">Delete</button>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#books").DataTable();

            $("#books").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this book?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/books/" + button.attr("data-book-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
            });
        });
    </script>
}






